<p id="notice"><%= notice %></p>

<h1>Cases</h1>
<% @cases.each do |c| %>
  <div class="row featurette">
    <div class="col-md-7">
      <h2 class="featurette-heading"><%=  c.name %> </h2>
      <p class="lead"><%= c.description  %> </p>
    </div>
    <div class="col-md-5">
      <svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 500x500"><%= cl_image_tag c.photo%></svg>
    </div>
  </div>
<% end %>
